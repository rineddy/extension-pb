{
    "name": "purebasic-extension",
    "displayName": "PureBasic Extension",
    "description": "PureBasic language support for Visual Studio Code",
    "version": "0.0.2",
    "publisher": "Eddy-R",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes",
        "Debuggers",
        "Formatters",
        "Linters"
    ],
    "contributes": {
        "languages": [
            {
                "id": "purebasic",
                "aliases": [
                    "purebasic",
                    "PureBasic",
                    "Pure Basic"
                ],
                "extensions": [
                    ".pb",
                    ".pbi"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "purebasic",
                "scopeName": "source.purebasic",
                "path": "./grammars/purebasic.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "PureBasic Dark+",
                "uiTheme": "vs-dark",
                "path": "./themes/purebasic-dark-plus.json"
            }
        ],
        "snippets": [
            {
                "language": "purebasic",
                "path": "./snippets/purebasic-snippets.json"
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "main": "./out/extension",
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
