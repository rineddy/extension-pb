{
	"name": "purebasic-extension",
	"displayName": "PureBasic Extension",
	"description": "PureBasic language support for Visual Studio Code",
	"version": "0.0.2",
	"license": "MIT",
	"publisher": "Eddy-R",
	"repository": {
		"type": "git",
		"url": "https://github.com/rineddy/extension-pb"
	},
	"engines": {
		"vscode": "^1.26.0"
	},
	"categories": [
		"Programming Languages",
		"Themes",
		"Snippets",
		"Debuggers",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"multi-root ready"
	],
	"contributes": {
		"languages": [
			{
				"id": "purebasic",
				"aliases": [
					"purebasic",
					"PureBasic"
				],
				"extensions": [
					".pb",
					".pbi"
				],
				"configuration": "./contributes/languages/purebasic.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "purebasic",
				"scopeName": "source.purebasic",
				"path": "./contributes/grammars/purebasic.tmLanguage.json"
			}
		],
		"themes": [
			{
				"id": "PureBasic Dark+",
				"label": "Dark+ (PureBasic)",
				"uiTheme": "vs-dark",
				"path": "./contributes/themes/darkplus.color-theme.json"
			}
		],
		"snippets": [
			{
				"language": "purebasic",
				"path": "./contributes/snippets/purebasic.code-snippets.json"
			}
		],
		"iconThemes": [
			{
				"id": "PureBasic Seti",
				"label": "Seti (PureBasic)",
				"path": "./contributes/iconThemes/seti.icon-theme.json"
			}
		],
		"configurationDefaults": {
			"[purebasic]": {
				"editor.insertSpaces": false,
				"editor.formatOnSave": true,
				"editor.formatOnType": true,
				"editor.detectIndentation": false,
				"editor.autoIndent": true,
				"editor.tabSize": 3
			}
		},
		"configuration": {
			"type": "object",
			"title": "PureBasic Configuration",
			"properties": {
				"purebasicLanguage.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"purebasicLanguage.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"main": "./client/out/pbClient",
	"activationEvents": [
		"onLanguage:purebasic"
	],
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile:client": "tsc -p ./client/tsconfig.json",
		"compile:server": "tsc -p ./server/tsconfig.json",
		"watch:client": "tsc -w -p ./client/tsconfig.json",
		"watch:server": "tsc -w -p ./server/tsconfig.json",
		"compile": "npm run compile:client && npm run compile:server",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "2.8.3",
		"tslint": "^5.8.0",
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0"
	}
}