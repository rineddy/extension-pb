{
    "name": "purebasic-extension",
    "displayName": "PureBasic Extension",
    "description": "PureBasic language support for Visual Studio Code",
    "version": "0.0.2",
    "publisher": "Eddy-R",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Programming Languages",
        "Themes",
        "Snippets",
        "Debuggers",
        "Formatters",
        "Linters"
    ],
    "contributes": {
        "languages": [
            {
                "id": "purebasic",
                "aliases": [
                    "purebasic",
                    "PureBasic"
                ],
                "extensions": [
                    ".pb",
                    ".pbi"
                ],
                "configuration": "./contributes/languages/purebasic.language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "purebasic",
                "scopeName": "source.purebasic",
                "path": "./contributes/grammars/purebasic.tmLanguage.json"                          
            }
        ],
        "themes": [
            {
                "id": "PureBasic Dark+",
                "label": "Dark+ (PureBasic)",
                "uiTheme": "vs-dark",
                "path": "./contributes/themes/darkplus.color-theme.json"
            }
        ],
        "snippets": [            
            {                
                "language": "purebasic",
                "path": "./contributes/snippets/purebasic.code-snippets.json"
            }
        ],
        "iconThemes": [            
            {
                "id": "PureBasic Seti",
                "label": "Seti (PureBasic)",
                "path": "./contributes/iconThemes/seti.icon-theme.json"
            }
        ],
        "configurationDefaults": {
            "[purebasic]": {
                "editor.insertSpaces": false,
                "editor.formatOnSave": true,
                "editor.autoIndent": true,
                "editor.tabSize": 3
            }
        },        
        "configuration": {
            "type": "object",
            "title": "PureBasic configuration",
            "properties": {
                
            }
        },
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:purebasic",
        "onCommand:extension.sayHello"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}