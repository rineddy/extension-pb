{
    "name": "purebasic-extension",
    "displayName": "PureBasic Extension",
    "description": "PureBasic language support for Visual Studio Code",
    "version": "0.0.2",
    "publisher": "Eddy-R",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes"
    ],
    "contributes": {
        "languages": [{
            "id": "purebasic",
            "aliases": ["purebasic", "PureBasic", "Pure Basic"],
            "extensions": [".pb",".pbi"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "purebasic",
            "scopeName": "source.purebasic",
            "path": "./syntaxes/purebasic.tmLanguage.json"
        }],
        "themes": [
            {
              "label": "PureBasic Dark+",
              "uiTheme": "vs-dark",
              "path": "./themes/dark-plus.json"
            }            
          ]
    }
}